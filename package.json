{
  "name": "@pipeletteio/time-meter",
  "version": "1.0.1",
  "description": "A minimal Node.js time-meter to calculate time between anything",
  "private": false,
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "author": "AshLePoney <20368690+AshLePoney@users.noreply.github.com>",
  "license": "MIT",
  "homepage": "https://github.com/pipeletteio/time-meter#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pipeletteio/time-meter.git"
  },
  "bugs": {
    "url": "https://github.com/pipeletteio/time-meter/issues"
  },
  "engines": {
    "node": ">= 12.0.0"
  },
  "scripts": {
    "build": "swc src -d build/package/src",
    "build:types": "tsc -p tsconfig.types.json --emitDeclarationOnly",
    "clear": "rm -rf build",
    "type-check": "tsc --noEmit",
    "lint": "eslint -c eslint.config.js .",
    "test": "jest --config jest.config.js",
    "coverage": "jest --config jest.config.js --coverage",
    "copyfiles": "cp package.json README.md LICENSE build/package",
    "package": "npm run clear && npm run build:types && npm run build && npm run copyfiles",
    "publish": "npm publish build/package",
    "postinstall": "husky install config/husky",
    "precommit": "npm run type-check && npm run lint && npm run coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.135",
    "@swc/jest": "^0.2.17",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "8.8.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "typescript": "^4.5.5"
  }
}
